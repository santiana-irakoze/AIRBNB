<div class="container my-5">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <div class="card shadow-sm">
        <div class="card-body d-flex">

          <div class="photo-card me-4">
            <% @game.photos.each do |photo| %>
              <%= cl_image_tag photo.key, height: 400, width: 400, crop: :fill, class: "img-fluid" %>
            <% end %>
          </div>
          <div class="details">
            <h1 class="card-title text-primary font-weight-bold mb-3"><%= @game.name.capitalize %></h1>
            <p><strong>Location:</strong> <%= @game.location %></p>
            <p><strong>Price:</strong> <%= @game.price %>â‚¬</p>
            <%= link_to 'Annuler', game_path(@game), class: 'btn btn-secondary btn-sm mt-3' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div><div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white text-center">
          <h3 class="mb-0">Bookings for this game</h3>
        </div>
        <div class="card-body">
          <% @game.bookings.each do |booking| %>
            <div class="row d-flex flex-inline">
            <div class="col-3"><%= booking.start_date %></div>
            <div class="col-3"><%= booking.end_date %></div>
            <div class="col-3"><%= booking.user.first_name %></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
