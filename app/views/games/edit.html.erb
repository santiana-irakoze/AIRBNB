<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-warning text-dark text-center">
          <h3 class="mb-0">Edit Game Details</h3>
        </div>
        <div class="card-body">
          <%= simple_form_for @game do |f| %>
            <div class="row">
              <div class="col-md-6">
                <%= f.input :name, label: 'Game Name', input_html: { class: 'form-control' } %>
              </div>
              <div class="col-md-6">
                <%= f.input :photos, as: :file, label: 'Upload Photos', input_html: { multiple: true, class: 'form-control' } %>
              </div>
            </div>

            <%= f.input :description, label: 'Description', input_html: { class: 'form-control', rows: 4 } %>
            <div class="row">
              <div class="col-md-6">
                <%= f.input :location, label: 'Location', input_html: { class: 'form-control' } %>
              </div>
              <div class="col-md-6">
                <%= f.input :price, label: 'Price (â‚¬)', input_html: { class: 'form-control' } %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <%= f.input :min_number_of_players, label: 'Min Players', input_html: { class: 'form-control' } %>
              </div>
              <div class="col-md-6">
                <%= f.input :max_number_of_players, label: 'Max Players', input_html: { class: 'form-control' } %>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <%= f.input :category, label: 'Category', input_html: { class: 'form-control' } %>
              </div>
              <div class="col-md-6">
                <%= f.input :playing_time, label: 'Playing Time (mins)', input_html: { class: 'form-control' } %>
              </div>
            </div>

            <div class="text-center mt-4">
              <%= f.submit 'Update Game', id: 'bright', class: 'btn btn-warning btn-lg px-4' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
